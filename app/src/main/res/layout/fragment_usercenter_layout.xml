<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:padding="20dp">

        <com.jyz.handquestionnaire.ui.widget.CircleImageView
            android:id="@+id/ful_iv_head"
            android:layout_height="100dp"
            android:layout_width="100dp"
            android:src="#3DA8F5"
            app:civ_border_color="#cccccc"
            app:civ_border_width="5dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"/>

        <TextView
            android:layout_below="@+id/ful_iv_head"
            android:id="@+id/ful_tv_login_and_regist"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="登陆/注册"
            android:layout_marginTop="20dp"
            android:textSize="20sp" />

        <TextView
            android:layout_below="@+id/ful_iv_head"
            android:id="@+id/ful_tv_nickname"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="昵称：航航"
            android:layout_marginTop="20dp"
            android:textSize="20sp"
            android:visibility="gone"/>

        <TextView
            android:layout_below="@+id/ful_tv_nickname"
            android:id="@+id/ful_tv_score"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="积分：10"
            android:layout_marginTop="10dp"
            android:textSize="20sp"
            android:visibility="gone"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_marginTop="80dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/ful_tv_publish"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:textSize="20sp"
            android:textColor="#333333"
            android:gravity="center"
            android:text="我发布的\n0"/>

        <TextView
            android:id="@+id/ful_tv_write"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:textSize="20sp"
            android:textColor="#333333"
            android:gravity="center"
            android:text="我填写的 \n 0"/>

        <TextView
            android:id="@+id/ful_tv_setting"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:textSize="20sp"
            android:gravity="center"
            android:textColor="#333333"
            android:text="设置"/>

    </LinearLayout>

</LinearLayout>