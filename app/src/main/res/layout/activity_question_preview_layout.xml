<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/toolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#FFFFFF"
                android:padding="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:text="问卷说明 : "
                    android:textColor="#235EAB"/>

                <TextView
                    android:layout_marginTop="8dp"
                    android:id="@+id/aqpl_ll_tv_introduce"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="#111111"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/aqpl_ll_table_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="vertical">

            </LinearLayout>

            <TextView
                android:id="@+id/aqpl_tv_empty"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:gravity="center"
                android:text="您还没有创建问题,快去创建吧!"
                android:textColor="#235EAB"
                android:textSize="18sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/aqpl_tv_submit"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/submit_round_bg"
                android:enabled="true"
                android:gravity="center"
                android:text="提交"
                android:textColor="#FFFFFF"
                android:textSize="18sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:text="带 * 为必填项"
                android:textColor="#A1A1A1"
                android:textSize="16sp" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>