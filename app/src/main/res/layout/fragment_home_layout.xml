<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="35dp">

        <View
            android:id="@+id/fhl_cursor"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:background="@drawable/home_cursor_round_bg"
            android:layout_marginLeft="42dp"/>

        <LinearLayout
            android:id="@+id/fhl_ll_tab_layout"
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal"
            android:background="@drawable/home_tab_round_bg">

            <TextView
                android:id="@+id/fhl_tv_hot"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:text="最热"
                android:gravity="center"
                android:textColor="#FFF"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/fhl_tv_new"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:text="最新"
                android:textColor="#DC3C38"
                android:gravity="center"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/fhl_tv_all"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:text="所有"
                android:textColor="#DC3C38"
                android:gravity="center"
                android:textSize="14sp" />

        </LinearLayout>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#CCCCCC"/>

    <android.support.v4.view.ViewPagerfhl_tv_all
        android:id="@+id/fhl_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v4.view.ViewPagerfhl_tv_all>


</LinearLayout>