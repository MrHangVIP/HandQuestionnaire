<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="10dp"
    android:paddingTop="10dp"
    android:paddingRight="10dp">

    <TextView
        android:id="@+id/iql_tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:textSize="16sp"
        android:text="当今世界还有哪个国家比中国要牛逼?没有了"
        android:layout_marginBottom="8dp"
        android:ellipsize="end"
        android:textColor="#111111"/>

    <TextView
        android:id="@+id/iql_tv_publisher"
        android:layout_below="@+id/iql_tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="发布人: 宋智航"
        android:textSize="13sp"
        android:textColor="#333333"/>

    <TextView
        android:layout_below="@+id/iql_tv_title"
        android:id="@+id/iql_tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="2019-12-12"
        android:textSize="13sp"
        android:textColor="#333333"/>

    <View
        android:layout_below="@+id/iql_tv_time"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:background="#CCCCCC"/>

</RelativeLayout>